<%- include('../partials/header') %>

<div>
    <img alt="avatar" src="<%= user.avatar %>" referrerpolicy="no-referrer"> 
    <%= user.name %></div>
    <% const accountCreated = user.createdAt %>
    <div>Account Created: <%= accountCreated%></div>
    <% if (posts.length) { %>
      <% posts.forEach(function(p) { %>
        <section id="show-page" class="container-lg">
          <h1><%= p.title %></h1>
          <div><%= p.content %></div>
          <div><%= p.createdAt %></div><br>
        </section>
      <% }); %>
   <% } %>
    
</div>

<section class="userBio">
  <%= user.bio %>
</section>

<form id="add-bio" action="users/<%= user._id %>" method="POST" class="form-group">
  <label>Enter Bio:</label>
  <input type="text" name="bio" class="form-control">
  <input type="submit" value="Submit" class="btn btn-dark">
</form>

<%- include('../partials/footer') %>

  