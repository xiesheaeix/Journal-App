<%- include('../partials/header') %>

<div id="user-info" class="mt-4">
    <img alt="avatar" src="<%= user.avatar %>" referrerpolicy="no-referrer"> 
    <%= user.name %></div>
    <% const accountCreated = user.createdAt %>
    <div class="text-right">Account Created: <%= accountCreated.toLocaleDateString(); %></div>
      <%= user.bio %>

  <form class="mt-4" id="add-bio" action="users" method="POST" class="form-group">
    <label>Enter Bio:</label>
    <input type="text" name="bio" class="form-control">
    <input type="submit" value="Submit" class="btn btn-dark">
  </form>
</div>

    <% if (posts.length) { %>
      <% posts.forEach(function(p) { %>
        <section id="show-page" class="container-lg">
          <h1><%= p.title %></h1>
          <p><%= p.content %></p><br>
          <div class="d-flex justify-content-between">
              <% const postCreated = p.createdAt %>
              Posted: <%= postCreated.toLocaleDateString(); %>
            <a href="/posts/<%=p._id %>">Details</a>
          </div>
        </section>
      <% }); %>
   <% } else { %>
    <h4 class="mt-4">No Posts Yet ðŸ˜¢</h4>
  <% } %>
    

